{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "transcriptor",
  "title": "Transcriptor",
  "description": "Record and transcribe meetings with local Whisper",
  "icon": "extension-icon.png",
  "author": "brian",
  "categories": ["Productivity", "Media"],
  "license": "MIT",
  "preferences": [
    {
      "name": "transcriptorPath",
      "title": "Transcriptor CLI Path",
      "description": "Path to the transcriptor CLI binary",
      "type": "textfield",
      "required": false,
      "default": "transcriptor"
    }
  ],
  "commands": [
    {
      "name": "start-recording",
      "title": "Start Recording",
      "description": "Start recording a new meeting",
      "mode": "view"
    },
    {
      "name": "stop-recording",
      "title": "Stop Recording",
      "description": "Stop the current recording",
      "mode": "no-view"
    },
    {
      "name": "recording-status",
      "title": "Recording Status",
      "description": "Check if recording is in progress",
      "mode": "no-view"
    },
    {
      "name": "view-transcripts",
      "title": "View Transcripts",
      "description": "Browse and open transcripts",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.64.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.10.4",
    "@types/react": "18.2.45",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
